<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MVVMExample2022" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>

        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>

    <!-- Toolbar theme. -->
    <style name="Theme.MVVMExample2022.Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:editTextColor">@color/white</item>

        <item name="android:textColorHint">@color/white_60</item>

    </style>

</resources>